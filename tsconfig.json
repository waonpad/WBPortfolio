{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  // "exclude": [
  //   "vendor",
  //   "node_modules"
  // ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}